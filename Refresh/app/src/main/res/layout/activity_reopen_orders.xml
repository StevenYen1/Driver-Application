<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReopenOrders"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/close_layout1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_details_reopen"
            android:text="Order Number: \nShipment Address: \nRecipient: \nItem Description:"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reopen_list_layout"
        android:layout_below="@id/close_layout1"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="8.0"
            android:id="@+id/list_view_reopen">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:gravity="center_vertical"
            android:background="@color/skyblue"
            android:id="@+id/close_buttons"
            android:layout_below="@+id/reopen_list_layout"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:layout_width="0.0dp"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:layout_marginRight="5dp"
                android:id="@+id/accept_reopen"
                android:text="Accept"
                android:gravity="center"/>

            <Button
                android:layout_width="0.0dp"
                android:layout_height="70dp"
                android:layout_weight="1.0"
                android:layout_marginLeft="5dp"
                android:id="@+id/cancel_reopen"
                android:text="Cancel"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_view_reopen"
        android:gravity="center"/>

</RelativeLayout>