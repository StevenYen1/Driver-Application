<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrders">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/satblue"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:padding="10dp"
                    android:tint="@color/white"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:text="ADD NEW ORDER"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView1"
                android:rotation="45"
                android:layout_marginTop="-10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/blueback"
                android:layout_below="@+id/linearlayout1"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView1"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/relativelayout1"
                >

                <ImageView
                    android:id="@+id/square1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/satblue"
                    android:padding="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:tint="@color/white"/>

                <EditText
                    android:id="@+id/add_orderno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/square1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/square1"
                    android:background="#DADADA"
                    android:hint="Order Number"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout1"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/relativelayout2"
                >

                <ImageView
                    android:id="@+id/square2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/satblue"
                    android:padding="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:tint="@color/white"/>

                <EditText
                    android:id="@+id/add_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/square2"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/square2"
                    android:background="#DADADA"
                    android:hint="Delivery Address"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout2"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/relativelayout3"
                >

                <ImageView
                    android:id="@+id/square3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/satblue"
                    android:padding="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:tint="@color/white"/>

                <EditText
                    android:id="@+id/add_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/square3"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/square3"
                    android:background="#DADADA"
                    android:hint="Recipient"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout3"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/relativelayout4"
                >

                <ImageView
                    android:id="@+id/square4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/satblue"
                    android:padding="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:tint="@color/white"/>

                <EditText
                    android:id="@+id/add_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/square4"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/square4"
                    android:background="#DADADA"
                    android:hint="Item"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout4"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/relativelayout5"
                >

                <Button
                    android:id="@+id/add_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/satblue"
                    android:layout_centerHorizontal="true"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />

                <!--<ImageView-->
                    <!--android:id="@+id/square1"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:background="@color/satblue"-->
                    <!--android:padding="8dp"-->
                    <!--android:src="@mipmap/ic_launcher"-->
                    <!--android:tint="@color/white"/>-->

                <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignBottom="@+id/square1"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:layout_toRightOf="@id/square1"-->
                    <!--android:background="#DADADA"-->
                    <!--android:hint="Order Number"-->
                    <!--android:textSize="15sp"-->
                    <!--android:paddingLeft="20dp"/>-->

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>