<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentBody"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".scannedItems"
    tools:showIn="@layout/activity_scanned_items"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/order_area"
        android:layout_above="@+id/sign_btn_layout">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="5.0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"

        android:id="@+id/sign_btn_layout"
        android:layout_alignParentBottom="true">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/goto_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            fancy:fb_text="Continue\nTo\nSignature"
            fancy:fb_textColor="@color/white"
            fancy:fb_textGravity="center"
            fancy:fb_defaultColor="#10b3a8"
            fancy:fb_focusColor="#63fff5"
            fancy:fb_radius="2dp"
            />

    </LinearLayout>

</RelativeLayout>