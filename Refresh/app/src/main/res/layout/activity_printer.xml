<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Printer">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DADADA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/dark_blue"
            android:text="Generate Label"
            android:textColor="#ffffff"
            android:id="@+id/tv_header"
            android:textSize="18sp"
            android:gravity="center"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choose_print"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:contentPaddingTop="10dp"
            app:contentPaddingBottom="10dp">

            <ImageView
                android:id="@+id/barcode_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/choose_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_header"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <Button
                android:id="@+id/shiplabel_button"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textAllCaps="false"
                android:text="Return Label" />

            <Button
                android:id="@+id/returnlabel_button"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:text="Shipping Label" />

        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/print_button"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>