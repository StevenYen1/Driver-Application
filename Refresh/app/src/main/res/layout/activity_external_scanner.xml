<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".External_Scanner"
    android:background="@drawable/background_gradient_dark">

    <LinearLayout
        android:id="@+id/external_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/external_inner_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="5"
                android:background="@color/middle_blue"
                android:id="@+id/external_title"
                android:text="Scan Items Below"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/external_sideMenu"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.8"
                fancy:fb_fontIconResource="&#xf0c9;"
                fancy:fb_text=""
                fancy:fb_defaultColor="@color/skyblue"
                fancy:fb_focusColor="#73ffa6"
                fancy:fb_textColor="@color/white"
                fancy:fb_textGravity="center"
                fancy:fb_fontIconSize="20sp"
                />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/ext_cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/external_layout1">

        <LinearLayout
            android:id="@+id/external_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blue"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="ITEM BEING SCANNED"
                android:textSize="45dp"
                android:fontFamily="@font/benchnine"
                android:textColor="@color/middle_blue"
                android:textStyle="bold"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/purple"
                android:text=""
                android:textColor="@color/white"
                android:textSize="50dp"
                android:gravity="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/recent_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:text="Click Here to view the most recent scan."
        android:textColor="@color/middle_blue"
        android:gravity="center"
        android:textSize="24dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/ext_cardview1"/>


</android.support.constraint.ConstraintLayout>